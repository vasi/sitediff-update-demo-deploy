<VirtualHost *:80>
  ServerName default
  ServerAlias default
  DocumentRoot /drupal
  RewriteEngine On

  <Directory /drupal/site>
    Options FollowSymLinks
    AllowOverride All
    Order allow,deny
    Allow from all
  </Directory>

  Alias /xhprof /usr/share/php/xhprof_html

  LogLevel info
  ErrorLog /var/log/apache2/drupal-error.log
  CustomLog /var/log/apache2/drupal-access.log combined
</VirtualHost>
